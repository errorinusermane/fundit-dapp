// /tsconfig.json(루트에 위치함)
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".", // 루트 기준
    "paths": {
      "@shared/*": ["shared/*"],
      "@utils/*": ["backend/utils/*"]
    }
  },
  "include": ["backend", "shared"]
}
